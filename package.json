{
	"name": "@king-studios-rbx/anime-reborn-configuration",
	"version": "1.0.0",
	"description": "Configuration system for Anime Reborn - editable via Google Sheets, compiled to TypeScript",
	"packageManager": "bun@1.3.5",
	"private": false,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"config/csv",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/King-Studios-RBX/Anime-Reborn-Configuration.git"
	},
	"keywords": [
		"configuration",
		"google-sheets",
		"game-config",
		"typescript",
		"roblox"
	],
	"scripts": {
		"prepare": "echo 'Skipping husky setup'",
		"fetch-config": "tsx scripts/fetch-config.ts",
		"compile-config": "tsx scripts/compile-config.ts",
		"prebuild": "npm run compile-config",
		"build": "tsc --project tsconfig.build.json",
		"build:rojo": "rojo build -o default.rbxl",
		"compile:rbxts": "bunx rbxtsc",
		"watch": "bunx rbxtsc -w",
		"dev": "concurrently \"rojo serve\" \"turbo run watch\"",
		"test": "echo \"No tests yet\" && exit 0"
	},
	"dependencies": {
		"@rbxts/compiler-types": "^3.0.0-types.0",
		"@rbxts/services": "^1.6.0",
		"csv-parse": "^5.5.6",
		"csv-stringify": "^6.5.2",
		"dotenv": "^16.4.7",
		"googleapis": "^144.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@ls-lint/ls-lint": "^2.3.1",
		"@rbxts/types": "^1.0.896",
		"@types/bun": "latest",
		"@types/node": "^22.10.5",
		"concurrently": "^9.2.1",
		"cspell": "^9.4.0",
		"husky": "^9.1.7",
		"tsx": "^4.21.0",
		"turbo": "^2.7.3"
	},
	"peerDependencies": {
		"roblox-ts": "^3.0.0",
		"typescript": "^5"
	}
}
