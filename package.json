{
	"name": "configuration-generator",
	"version": "1.0.0",
	"description": "Configuration generator - editable via Google Sheets, compiled to TypeScript",
	"packageManager": "bun@1.3.6",
	"private": true,
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist",
		"config/csv",
		"README.md",
		"LICENSE"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/King-Studios-RBX/Anime-Reborn-Configuration.git"
	},
	"keywords": [
		"configuration",
		"google-sheets",
		"game-config",
		"typescript",
		"roblox"
	],
	"scripts": {
		"prepare": "bunx husky",
		"fetch-config": "bun run scripts/fetch-config.ts",
		"compile-config": "bun run scripts/compile-config.ts",
		"sync-config": "bun run scripts/fetch-config.ts && bun run scripts/compile-config.ts",
		"verify-config": "bun run scripts/verify-sheets.ts",
		"prebuild": "bun run compile-config",
		"build": "tsc --project tsconfig.build.json",
		"test": "bun test"
	},
	"dependencies": {
		"csv-parse": "^6.1.0",
		"csv-stringify": "^6.6.0",
		"dotenv": "^17.2.3",
		"googleapis": "^170.0.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"@ls-lint/ls-lint": "^2.3.1",
		"@types/bun": "latest",
		"concurrently": "^9.2.1",
		"cspell": "^9.6.0",
		"husky": "^9.1.7",
		"turbo": "^2.7.4",
		"typescript": "^5.6.3"
	},
	"bin": {
		"configgen": "dist/cli.js"
	},
	"peerDependencies": {
		"typescript": "^5"
	}
}
