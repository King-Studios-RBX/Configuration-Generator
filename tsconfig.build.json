{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": ["ES2020"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"noLib": false,
		"typeRoots": ["node_modules/@types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "src/runtime.ts", "**/*.spec.ts", "**/*.test.ts"]
}
